generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model i18n {
  word        String
  lang        String
  translation String

  @@id([word, lang])
  @@index([lang, translation], map: "i18n_lang_idx")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model Product {
  id          String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  market      String
  crdb_region crdb_internal_region
  amount      Decimal              @db.Decimal
  currency    String

  @@index([market])
  @@map("product")
}

enum crdb_internal_region {
  aws_eu_central_1 @map("aws-eu-central-1")
  aws_eu_west_1    @map("aws-eu-west-1")
  aws_us_east_1    @map("aws-us-east-1")
  aws_us_west_2    @map("aws-us-west-2")
}
